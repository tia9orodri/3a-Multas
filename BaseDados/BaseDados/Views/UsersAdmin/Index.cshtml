@model IEnumerable<BaseDados.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if(User.IsInRole("RecursosHumanos")){
<p>
    @Html.ActionLink("Create New", "Create")
</p>
    }
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
